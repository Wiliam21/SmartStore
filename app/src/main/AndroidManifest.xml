<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="p8.example.puntoventa">

    <uses-feature android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/lg"
        android:label="SmartStore"
        android:roundIcon="@mipmap/lg"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".ReporteSemanal" />
        <activity android:name=".ElementosReporte" />
        <activity android:name=".ReportePerson" />
        <activity
            android:name=".ReporteMensual"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".ReporteDiario"
            android:configChanges="orientation|screenSize" />
        <activity android:name=".EditarProveedor" />
        <activity android:name=".Ajustes" />
        <activity android:name=".Proveedor" />
        <activity
            android:name=".Inventario"
            android:label="Inventario"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".AltaProveedores"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".ReporteProductos" />
        <activity
            android:name=".VentaProductos"
            android:configChanges="orientation|screenSize"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditarProducto"
            android:windowSoftInputMode="stateHidden" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".AltaProductos"
            android:windowSoftInputMode="stateHidden" />
    </application>

</manifest>